if [ "$PHASE" = "post-up" ] && [ "$ADDRFAM" = "inet6" ]
then
  # restart wide dhcpv6 client if neccessary
  if [ $(grep -E "^$IFACE$" /var/lib/iserv/config/ipv6-delegation-interfaces.list) ] || \
   [ $(grep -E "^$IFACE$" /var/lib/iserv/config/ipv6-dhcp-interfaces.list) ]
  then
    if [ "$(systemctl show -p SubState --value wide-dhcpv6-client.service)" = "running" ]
    then
      echo "Restarting Wide DHCPv6 client ..."
      /usr/lib/iserv/sleep_exec_once 3 restart_wide "service wide-dhcpv6-client restart"
      echo "Done."
    fi
  fi
fi

